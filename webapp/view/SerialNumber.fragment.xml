<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form">
	<Dialog title="{i18n>ADD_SN}">
		<content>
			<form:SimpleForm>
				<Label text="{i18n>SN}"/>
				<Input id="SN" value="{objectView>/additionalSN}" submit="onConfirmSN" valueState="{objectView>/snValueState}"/>
			</form:SimpleForm>
		</content>
		<beginButton>
			<Button text="{i18n>ADD}" press="onConfirmSN"/>
		</beginButton>
		<endButton>
			<Button text="{i18n>Cancel}" press="onCancelSN"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>