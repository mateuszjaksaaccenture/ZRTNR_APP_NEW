<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:semantic="sap.m.semantic" xmlns:footerbar="sap.ushell.ui.footerbar"
	xmlns:core="sap.ui.core" controllerName="cre.ret.app.controller.Worklist">
	<semantic:FullscreenPage id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>worklistViewTitle}">
		<semantic:customHeaderContent>
			<Text text="{i18n>BSCSCode}: {appView>/Salid}"/>
			<Button id="SO_SHOP" icon="sap-icon://retail-store" press="onShopSelect" text="{i18n>Shop}: {appView>/Shop}"/>
		</semantic:customHeaderContent>
		<semantic:content>
			<FlexBox height="100px" alignItems="Center" justifyContent="Center">
				<items>
					<!-- P2S-MAINT-SD: [CR_P2S_294] Poprawa ergonomii w proc sprzed startmj{  -->
					<!-- <Select id="SELECT_SEARCH" width="auto" change="onDocTypeChange" items="{/DocTypesSet}" selectedKey="VBELN_VF"> -->
					<Select id="SELECT_SEARCH" width="auto" change="onDocTypeChange" items="{/DocTypesSet}" selectedKey="ZXXSER50">	
					<!--  }  -->				
						<core:Item key="{DocType}" text="{DocTypeDesc}"/>
					</Select>
					<SearchField id="SEARCH_FIELD" width="auto" search="onSearch" maxLength="{worklistView>/srchMaxLength}"/>
					<Button text="{i18n>Search}" press="onSearchPressed" enabled="{appView>/ShopAvailable}"/>
				</items>
			</FlexBox>
			<Table id="DOC_LIST" inset="true" headerText="{worklistView>/worklistTableTitle}" items="{path:'/Documents'}"
				growing="true" growingThreshold="25" updateFinished="onUpdateFinished">
				<items counter="0">
					<ColumnListItem type="Navigation" press="onItemPress">
						<cells>
							<ObjectIdentifier id="INV_ID" title="{= ${NoSapInvoice} === true ? ${i18n>noInv} : ${Invoice} }"/>
							<Text id="MAT_DESC" text="{MatAndQuan}"/>
							<Text id="SALES_DOC" text="{SalesDoc}"/>
							<Text id="NIP" text="{Taxnumber1}"/>
							<Text id="SERIAL_NUM" text="{SerialNums}"/>
							<Text id="AMNT" text="{ path: 'GrossVal', formatter: '.formatter.numberUnit' }"/>
							<Text id="CURR" text="{Currency}"/>
							<Text id="CUST_NUM" text="{CustNum}"/>
							<Text id="CUST_DESC" text="{CustDescr}"/>
							<Text id="DELIV" text="{Delivery}"/>
						</cells>
					</ColumnListItem>
				</items>
				<columns>
					<Column hAlign="Left" minScreenWidth="tablet" width="auto" demandPopin="true">
						<header>
							<Text text="{i18n>INV_ID}" textAlign="Left" width="100%" maxLines="0" visible="{worklistView>/invVisible}"/>
						</header>
					</Column>
					<Column hAlign="Left" minScreenWidth="tablet" width="auto" demandPopin="false" visible="{worklistView>/prodVisible}">
						<header>
							<Text text="{i18n>MAT_DESC}" textAlign="Left" width="100%" maxLines="0"/>
						</header>
					</Column>
					<Column hAlign="Left" minScreenWidth="tablet" width="auto" demandPopin="true">
						<header>
							<Text text="{i18n>SALES_DOC}" textAlign="Left" width="100%" maxLines="0"/>
						</header>
					</Column>
					<Column hAlign="Left" minScreenWidth="tablet" width="auto" demandPopin="true" visible="{worklistView>/nipVisible}">
						<header>
							<Text text="{i18n>NIP}" textAlign="Left" width="100%" maxLines="0"/>
						</header>
					</Column>
					<Column hAlign="Left" minScreenWidth="tablet" width="auto" demandPopin="true" visible="{worklistView>/snVisible}">
						<header>
							<Text text="{i18n>SER_NUM}" textAlign="Left" width="100%" maxLines="0"/>
						</header>
					</Column>
					<Column hAlign="Left" minScreenWidth="tablet" width="auto" demandPopin="true" visible="false">
						<header>
							<Text text="{i18n>AMNT}" textAlign="Left" width="100%" maxLines="0"/>
						</header>
					</Column>
					<Column hAlign="Left" minScreenWidth="tablet" width="auto" demandPopin="true" visible="false">
						<header>
							<Text text="{i18n>CURR}" textAlign="Left" width="100%" maxLines="0"/>
						</header>
					</Column>
					<Column hAlign="Left" minScreenWidth="tablet" width="auto" demandPopin="true">
						<header>
							<Text text="{i18n>CUST_NUM}" textAlign="Left" width="100%" maxLines="0"/>
						</header>
					</Column>
					<Column hAlign="Left" minScreenWidth="tablet" width="auto" demandPopin="true">
						<header>
							<Text text="{i18n>CUST_DESC}" textAlign="Left" width="100%" maxLines="0"/>
						</header>
					</Column>
					<Column hAlign="Left" minScreenWidth="tablet" width="auto" demandPopin="true">
						<header>
							<Text text="{i18n>DELIV}" textAlign="Left" width="100%" maxLines="0"/>
						</header>
					</Column>
				</columns>
			</Table>
		</semantic:content>
		<semantic:mainAction>
		    <semantic:MainAction text="{i18n>createWithOutReference}" enabled="{= ${worklistView>/searchResultAmount} === 0 &amp;&amp; ${appView>/ShopAvailable}}" id="createNoRef" press="onNoRefCreate" visible="true"/>
		</semantic:mainAction>
	</semantic:FullscreenPage>
</mvc:View>